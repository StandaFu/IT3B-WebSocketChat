        <Button Content="" HorizontalAlignment="Center" Margin="0,355,0,0" Width="112" Background="{x:Null}" BorderBrush="Black" Height="39" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Center" Height="33" Margin="0,358,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="112" TextAlignment="Center" FontSize="30" FontFamily="Bank Gothic Md AT" Foreground="White"><Run Language="cs-cz" Text="quit"/></TextBlock>
    </Grid>
</Window>
